#!/usr/local/bin/zsh
# Preferred editor for local and remote sessions
if [[ -n $SSH_CONNECTION ]]; then
  export EDITOR="vi"
  export VISUAL="vi"
else
  export EDITOR="code"
  export VISUAL="code"
fi

if [[ "$OSTYPE" == darwin* ]]; then
  export BROWSER="open"
fi

export PAGER="less"

########
# Python

# Make Python use UTF-8 encoding for output to stdin, stdout, and stderr.
export PYTHONIOENCODING="UTF-8"

# Virtualenv
export WORKON_HOME=$HOME/.virtualenvs
export VIRTUALENVWRAPPER_PYTHON=/usr/local/bin/python3
export VIRTUALENVWRAPPER_VIRTUALENV=/usr/local/bin/virtualenv
export VIRTUALENVWRAPPER_SCRIPT=/usr/local/bin/virtualenvwrapper.sh

# Require PIP to use VIRTUALENV
export PIP_REQUIRE_VIRTUALENV=true
export PIP_VIRTUALENV_BASE=$WORKON_HOME

###
# R
# R user library
export R_LIBS_USER=$HOME/.R/packages
# Ensure colorout is loaded also in Packrat directories
export R_PACKRAT_EXTERNAL_PACKAGES="colorout"

###
# Ruby
# To use Homebrew openssl with ruby
export RUBY_CONFIGURE_OPTS="--with-openssl-dir=$(brew --prefix openssl@1.1)"

##########
# LOCATION
# Prefer US English and use UTF-8.
export LANG=en_US.UTF-8
export LC_CTYPE=en_US.UTF-8
export LC_ALL=en_US.UTF-8

# But Swedish TimeZone
export TZ="Europe/Stockholm"

# For GPG to work with Git
# https://stackoverflow.com/questions/39494631/gpg-failed-to-sign-the-data-fatal-failed-to-write-commit-object-git-2-10-0
export GPG_TTY=$(tty)

# Homebrew, cleanup after install
export HOMEBREW_INSTALL_CLEANUP

# THEMING

# Set the default Less options.
export LESS="--raw-control-chars --ignore-case --squeeze-blank-lines --hilite-unread"

# Highlight section titles in manual pages.
export LESS_TERMCAP_mb=$'\E[01;31m'
export LESS_TERMCAP_md=$'\E[01;31m'
export LESS_TERMCAP_me=$'\E[0m'
export LESS_TERMCAP_se=$'\E[0m'
export LESS_TERMCAP_so=$'\E[01;44;33m'
export LESS_TERMCAP_ue=$'\E[0m'
export LESS_TERMCAP_us=$'\E[01;32m'

# Colors
export TERM=xterm-256color

# Perl settings (autogenerated)
export PERL5LIB="$HOME/perl5/lib/perl5${PERL5LIB:+:${PERL5LIB}}"; export PERL5LIB;
export PERL_LOCAL_LIB_ROOT="$HOME/perl5${PERL_LOCAL_LIB_ROOT:+:${PERL_LOCAL_LIB_ROOT}}"; export PERL_LOCAL_LIB_ROOT;
export PERL_MB_OPT="--install_base \"$HOME/perl5\""; export PERL_MB_OPT;
export PERL_MM_OPT="INSTALL_BASE=$HOME/perl5"; export PERL_MM_OPT;
