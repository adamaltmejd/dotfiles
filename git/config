[user]
	name = Adam Altmejd
	email = adam@altmejd.se
	signingkey = ~/.ssh/id_github

[core]
	editor = code --wait
	pager = delta
	whitespace = space-before-tab,-indent-with-non-tab,trailing-space
	autocrlf = input

[apply]
	whitespace = fix

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true
	line-numbers = true
	side-by-side = false

[commit]
	gpgsign = true
	verbose = true

[gpg]
	format = ssh

[gpg "ssh"]
	allowedSignersFile = ~/.config/git/allowed-signers

[credential]
	helper = osxkeychain

[diff]
	algorithm = histogram

[diff "bin"]
	textconv = hexdump -v -C

[merge]
	log = true
	conflictstyle = zdiff3

[help]
	autocorrect = prompt

[pull]
	rebase = false
	ff = only

[push]
	autoSetupRemote = true
	followTags = true

[fetch]
	prune = true
	fsckObjects = true

[receive]
	fsckObjects = true

[transfer]
	fsckObjects = true

[branch]
	sort = -committerdate

[tag]
	sort = -version:refname

[column]
	ui = auto

[status]
	showUntrackedFiles = all

[rebase]
	autoStash = true

[rerere]
	enabled = true

[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process

[init]
	defaultBranch = main
