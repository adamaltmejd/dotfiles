[user]
	name = Adam Altmejd
	email = adam@altmejd.se
	signingkey = ~/.ssh/id_github.pub

[core]
	editor = code --wait
	pager = delta
	whitespace = space-before-tab,-indent-with-non-tab,trailing-space
	trustctime = false
	precomposeunicode = false
	autocrlf = input

[apply]
	whitespace = fix

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true
	line-numbers = true
	side-by-side = false

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red
	new = green

[commit]
	gpgsign = true

[gpg]
	format = ssh

[credential]
	helper = osxkeychain

[diff]
	tool = vscode

[difftool "vscode"]
	cmd = code --wait --diff $LOCAL $REMOTE

[diff "bin"]
	textconv = hexdump -v -C

[merge]
	tool = vscode
	log = true

[mergetool "vscode"]
	cmd = code --wait $MERGED

[help]
	autocorrect = 1

[pull]
	rebase = false
	ff = only

[push]
	default = simple
	followTags = true

[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process

[init]
	defaultBranch = main
